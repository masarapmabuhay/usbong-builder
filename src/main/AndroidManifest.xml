                android:value="usbong.android.builder.activities.ScreenListActivity" />
        </activity>
        <activity
            android:name=".activities.ScreenDetailActivity"
            android:parentActivityName=".activities.ScreenListActivity"
            android:screenOrientation="portrait" >

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="usbong.android.builder.activities.ScreenListActivity" />
        </activity>
        <activity
            android:name=".activities.SelectScreenActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activities.SelectDecisionActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.nononsenseapps.filepicker.FilePickerActivity"
            android:theme="@style/FilePicker.Theme" >
        </activity>
        <activity
            android:name=".activities.AboutUsbongActivity"
            android:parentActivityName=".activities.MainActivity"
            android:screenOrientation="portrait" >

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="usbong.android.builder.activities.MainActivity" />
        </activity>

